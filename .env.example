ANTHROPIC_API_KEY=your_api_key_here

# Google OAuth 2.0 - create credentials at https://console.cloud.google.com/apis/credentials
# Set the Authorized Redirect URI to: http://localhost:8000/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# JWT signing secret - use a long random string in production
SECRET_KEY=change-me-to-a-long-random-secret

# Database URL (defaults to SQLite; swap for PostgreSQL in production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/cryptodb

